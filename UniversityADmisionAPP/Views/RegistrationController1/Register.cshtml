@{
     Layout = "_Layout";
}
<h1 class="text-center">Registration application form</h1>
<div class="row">
    <div class="col-6">
        <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">FirstName</label>
<input class="form-control" list="datalistOptions" id="exampleFormControlinput" placeholder="Type to firstname...">

        </div>
    </div>
    <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">LastName</label>
<input class="form-control" list="datalistOptions" id="exampleFormControlinput" placeholder="Type to lastname...">

        </div>
    </div>
     <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">Date of birth</label>
<input type="date" class="form-control"  id="exampleFormControlinput" >

        </div>
    </div>
        <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">Email</label>
<input type="email" class="form-control" list="datalistOptions" id="exampleFormControlinput" placeholder="example@mail.com...">

        </div>
    </div>
     <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">UserName</label>
<input type="text" class="form-control" list="datalistOptions" id="exampleFormControlinput"  placeholder="moha77">

        </div>
    </div>
        <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">Password</label>
<input type="text" class="form-control" list="datalistOptions" id="exampleFormControlinput" placeholder="***************">

        </div>
    </div>
     <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">Address</label>
<input type="text" class="form-control"  id="exampleFormControlinput"  placeholder="address">

        </div>
    </div>
        <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">Mobile</label>
<input type="text" class="form-control" id="exampleFormControlinput" placeholder="61xxxxxxxx...">

        </div>
    </div>
                  <div class="col-6">
     <div class="mb-3">
            <label for="exampleFormControlinput" class="form-label">File</label>
<input type="file" class="form-control" id="exampleFormControlinput" placeholder="no file chosen">

        </div>
    </div>
    
    <div class="col-6">
        <div class="mt-4">
        <div class="row">
            <div class="col-3">
                <div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
  <label class="form-check-label" for="flexRadioDefault1">
    Male
  </label>
            </div>
        </div>
          <div class="col-3">
              <div class="form-check">
  <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
  <label class="form-check-label" for="flexRadioDefault2">
    Female
  </label>
</div>
        </div>
     
</div></div></div>

    <div class="col-6">
        <label for="exampleFormControlInput1" class="form-label">Faculty</label>
   <select class="form-select" aria-label="Default select example">
  <option selected>Select</option>
  <option value="1">Faculty of Science </option>
  <option value="2">Faculty of Arts and Social Studies</option>
  <option value="3">Faculty of Engineering</option>
</select>
    </div>

       <div class="col-6">
           <label for="exampleFormControlInput1" class="form-label">Education Level</label>
   <select class="form-select" aria-label="Default select example">
  <option selected>Select</option>
  <option value="1">Bachelor Degree</option>
  <option value="2">Masters Degree</option>
  <option value="3">Phd</option>
</select>

    </div>


                <div class="mt-5">
  <button type="button" class="btn btn-success">Success</button>
    </div>

</div> 


